{
  "description": "Tool-to-MCP-server mapping configuration for common tool patterns",
  "version": "1.0.0",
  "tool_categories": {
    "web_search": {
      "description": "Web search and browsing capabilities",
      "tools": [
        "brave-search_brave_web_search"
      ],
      "mcp_servers": ["toolman"]
    },
    "memory": {
      "description": "Entity and memory management",
      "tools": [
        "memory_create_entities",
        "memory_search_entities", 
        "memory_update_entities",
        "memory_delete_entities"
      ],
      "mcp_servers": ["toolman"]
    },
    "documentation": {
      "description": "Documentation search and generation",
      "tools": [
        "rustdocs_query_rust_docs"
      ],
      "mcp_servers": ["toolman"]
    },
    "github": {
      "description": "GitHub repository and issue management",
      "tools": [
        "github_create_issue",
        "github_list_issues",
        "github_get_issue",
        "github_update_issue",
        "github_create_pr",
        "github_list_prs"
      ],
      "mcp_servers": ["toolman"]
    },
    "kubernetes": {
      "description": "Kubernetes cluster management",
      "tools": [
        "kubernetes_listResources",
        "kubernetes_getResource",
        "kubernetes_createResource",
        "kubernetes_updateResource",
        "kubernetes_deleteResource"
      ],
      "mcp_servers": ["toolman"]
    },
    "terraform": {
      "description": "Terraform infrastructure management",
      "tools": [
        "terraform_list_providers",
        "terraform_get_provider_schema",
        "terraform_validate_config"
      ],
      "mcp_servers": ["toolman"]
    },
    "filesystem": {
      "description": "Advanced filesystem operations beyond Claude Code built-ins",
      "tools": [
        "filesystem_read_file",
        "filesystem_write_file",
        "filesystem_list_directory",
        "filesystem_create_directory"
      ],
      "mcp_servers": ["filesystem"]
    }
  },
  "preset_configurations": {
    "minimal": {
      "description": "Minimal tool set for basic development tasks",
      "local_tools": ["read", "write", "edit"],
      "remote_tools": [],
      "mcp_servers": []
    },
    "default": {
      "description": "Standard tool set for most development tasks",
      "local_tools": ["bash", "read", "write", "edit", "grep", "glob"],
      "remote_tools": [
        "brave-search_brave_web_search",
        "memory_create_entities",
        "rustdocs_query_rust_docs"
      ],
      "mcp_servers": ["toolman"]
    },
    "advanced": {
      "description": "Comprehensive tool set for complex development and DevOps tasks",
      "local_tools": ["bash", "read", "write", "edit", "grep", "glob", "ls"],
      "remote_tools": [
        "brave-search_brave_web_search",
        "memory_create_entities",
        "rustdocs_query_rust_docs",
        "github_create_issue",
        "kubernetes_listResources",
        "terraform_list_providers"
      ],
      "mcp_servers": ["toolman", "filesystem"]
    }
  },
  "common_patterns": {
    "rust_development": {
      "description": "Tools commonly used for Rust development",
      "categories": ["web_search", "memory", "documentation"],
      "additional_tools": []
    },
    "devops": {
      "description": "Tools for DevOps and infrastructure management", 
      "categories": ["kubernetes", "terraform", "github"],
      "additional_tools": []
    },
    "full_stack": {
      "description": "Comprehensive toolset for full-stack development",
      "categories": ["web_search", "memory", "documentation", "github", "filesystem"],
      "additional_tools": []
    }
  },
  "tool_compatibility": {
    "description": "Information about tool compatibility and requirements",
    "notes": {
      "toolman": "Aggregated MCP server providing access to multiple remote tools",
      "filesystem": "Direct filesystem MCP server for advanced file operations",
      "local_tools": "Built-in Claude Code tools that don't require MCP servers"
    },
    "conflicts": [],
    "dependencies": {
      "github_*": ["Valid GitHub authentication token required"],
      "kubernetes_*": ["Kubernetes cluster access and valid kubeconfig required"],
      "terraform_*": ["Terraform binary and valid configuration required"]
    }
  }
}