{
  "mcpServers": {
    "toolman": {
      "command": "toolman",
      "args": [
        "--url",
        "http://toolman.agent-platform.svc.cluster.local:3000/mcp",
        "--working-dir",
        "/workspace"
      ],
      "env": {
        "TOOLMAN_SERVER_URL": "http://toolman.agent-platform.svc.cluster.local:3000/mcp"
      }
    },
    "openmemory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-fetch",
        "http://openmemory.cto-system.svc.cluster.local:3000/mcp"
      ]
    }
  }
}
