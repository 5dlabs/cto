# Aider Configuration
# Reference: https://aider.chat/docs/config/aider_conf.html
# Generated by CTO controller

# Model configuration
{{#if model}}
model: {{model}}
{{/if}}

{{#if api_key_env}}
# API key from environment variable
api-key-env: {{api_key_env}}
{{/if}}

{{#if base_url}}
# Custom API base URL
api-base: {{base_url}}
{{/if}}

# Read AGENTS.md for project context
read: AGENTS.md

# Auto-commit settings
{{#if auto_commits}}
auto-commits: true
{{else}}
auto-commits: false
{{/if}}

# Git configuration
{{#if dirty_commits}}
dirty-commits: true
{{else}}
dirty-commits: false
{{/if}}

# Message format
{{#if commit_prompt}}
commit-prompt: "{{commit_prompt}}"
{{/if}}

# Code editing style
{{#if edit_format}}
edit-format: {{edit_format}}
{{else}}
edit-format: whole
{{/if}}

# Voice/audio (disabled for automation)
voice: false

# Stream output
stream: true

# Show diffs
show-diffs: true

# Yes to all prompts (automation mode)
yes: true

