{
  "mcpServers": {
    "tools": {
      "command": "tools",
      "args": [
        "--url",
        "{{tools_url}}",
        "--working-dir",
        "/workspace"
      ],
      "env": {
        "TOOLS_SERVER_URL": "{{tools_url}}"
      }{{#if tools_tools}},
      "availableTools": [
        {{#each tools_tools}}
        "{{this}}"{{#unless @last}},{{/unless}}
        {{/each}}
      ]{{/if}}
    }
  }
}
