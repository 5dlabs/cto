{
  "mcpServers": {
    {{#if (or local_tools remote_tools (ne tool_config "minimal"))}}
    "toolman": {
      "type": "stdio",
      "command": "/usr/local/bin/toolman-client",
      "args": ["--working-dir", "/workspace"],
      "env": {
        "TOOLMAN_SERVER_URL": "${TOOLMAN_SERVER_URL:-http://toolman.mcp.svc.cluster.local:3000/mcp}"
      }
    }{{#if (eq tool_config "advanced")}},{{/if}}
    {{/if}}
    {{#if (eq tool_config "advanced")}}
    "filesystem": {
      "type": "stdio", 
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspace"],
      "env": {}
    }
    {{/if}}
  }
}