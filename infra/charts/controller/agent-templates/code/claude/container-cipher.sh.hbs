RUST_ENV_SOURCES=(
    "$HOME/.cargo/env"
    "/root/.cargo/env"
    "/usr/local/cargo/env"
    "/home/ubuntu/.cargo/env"
    "/home/user/.cargo/env"
)

for env_file in "${RUST_ENV_SOURCES[@]}"; do
    if [ -f "$env_file" ]; then
        echo "âœ“ Sourcing Rust environment from $env_file"
        . "$env_file"
