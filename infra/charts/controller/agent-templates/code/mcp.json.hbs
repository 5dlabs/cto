{
  "mcpServers": {
    "toolman": {
      "command": "toolman",
      "args": [
        "--url",
        "{{toolman_url}}",
        "--working-dir",
        "/workspace"
      ],
      "env": {
        "TOOLMAN_SERVER_URL": "{{toolman_url}}"
      }{{#if toolman_tools}},
      "availableTools": [
        {{#each toolman_tools}}
        "{{this}}"{{#unless @last}},{{/unless}}
        {{/each}}
      ]{{/if}}
    }
  }
}
