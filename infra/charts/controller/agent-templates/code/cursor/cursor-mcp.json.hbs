{
  "mcpServers": {
    "toolman": {
      "command": "toolman",
      "args": ["--url", "{{toolman.url}}", "--working-dir", "/workspace"],
      "env": {
        "TOOLMAN_SERVER_URL": "{{toolman.url}}"
      }{{#if toolman.tools}},
      "availableTools": [
        {{#each toolman.tools}}
        "{{this}}"{{#unless @last}},{{/unless}}
        {{/each}}
      ]{{/if}}
    }
  }
}

