{
  "$schema": "https://opencode.ai/config.json",
  "metadata": {
    "generatedAt": "{{metadata.timestamp}}",
    "correlationId": "{{metadata.correlation_id}}",
    "githubApp": "{{metadata.github_app}}",
    "cli": "{{metadata.cli}}"
  },
  "model": "{{agent.provider.name}}/{{agent.model}}"{{#if agent.temperature}},
  "temperature": {{agent.temperature}}{{/if}}{{#if agent.max_output_tokens}},
  "max_tokens": {{agent.max_output_tokens}}{{/if}},
  "provider": {
    "name": "{{agent.provider.name}}"{{#if agent.provider.base_url}},
    "base_url": "{{agent.provider.base_url}}"{{/if}},
    "envKey": "{{agent.provider.envKey}}"
  },
  "agent": {
    "githubApp": "{{metadata.github_app}}"{{#if agent.instructions}},
    "instructions": "{{agent.instructions}}"{{/if}}{{#if agent.remote_tools}},
    "remote_tools": [{{#each agent.remote_tools}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}]{{/if}}{{#if agent.local_servers}},
    "local_servers": {{{agent.local_servers}}}{{/if}}
  }{{#if agent.remote_tools}},
  "tools": {
    "remote": [{{#each agent.remote_tools}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}]
  }{{/if}},
  "mcp": {
    "toolman": {
      "type": "local",
      "command": ["toolman", "--url", "{{agent.toolman_url}}", "--working-dir", "/workspace"],
      "enabled": true,
      "env": {
        "TOOLMAN_SERVER_URL": "{{agent.toolman_url}}"
      }
    }
  }
}
