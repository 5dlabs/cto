{
  "model": "{{model}}",
  "max_tokens": {{max_tokens}},
  "temperature": {{temperature}},
  "github_app": "{{github_app}}",
  "cli": "{{cli}}",
  "timestamp": "{{timestamp}}",
  "correlation_id": "{{correlation_id}}",
  {{#if tools}}
  "tools": {
    {{#if tools.remote}}
    "remote": [
      {{#each tools.remote}}
      "{{this}}"{{#unless @last}},{{/unless}}
      {{/each}}
    ]{{#if tools.local_servers}},{{/if}}
    {{/if}}
    {{#if tools.local_servers}}
    "local_servers": {
      {{#each tools.local_servers}}
      "{{@key}}": {
        "enabled": {{this.enabled}},
        "tools": [
          {{#each this.tools}}
          "{{this}}"{{#unless @last}},{{/unless}}
          {{/each}}
        ]
      }{{#unless @last}},{{/unless}}
      {{/each}}
    }
    {{/if}}
  },
  {{/if}}
  {{#if mcp_servers}}
  "mcp_servers": {
    {{#each mcp_servers}}
    "{{@key}}": {
      "command": "{{this.command}}",
      {{#if this.args}}
      "args": [
        {{#each this.args}}
        "{{this}}"{{#unless @last}},{{/unless}}
        {{/each}}
      ],
      {{/if}}
      {{#if this.env}}
      "env": {
        {{#each this.env}}
        "{{@key}}": "{{this}}"{{#unless @last}},{{/unless}}
        {{/each}}
      }
      {{/if}}
    }{{#unless @last}},{{/unless}}
    {{/each}}
  },
  {{/if}}
  {{#if cli_config}}
  "cli_config": {{{json cli_config}}},
  {{/if}}
  "generated_by": "cli_adapter_claude",
  "version": "1.0"
}