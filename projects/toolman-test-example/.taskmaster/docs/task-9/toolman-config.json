{
  "remoteTools": [
    "brave_web_search",
    "query_npm_registry",
    "get_github_readme",
    "get_programming_language_docs"
  ],
  "localServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"],
      "tools": [
        "write_file",
        "read_file",
        "create_directory",
        "edit_file",
        "list_directory",
        "directory_tree"
      ],
      "workingDirectory": "project_root"
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "tools": [
        "git_status",
        "git_diff_unstaged",
        "git_log",
        "git_commit"
      ],
      "workingDirectory": "project_root"
    }
  }
}