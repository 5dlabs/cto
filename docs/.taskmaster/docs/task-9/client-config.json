{
  "remoteTools": [
    {
      "name": "otel-collector-api",
      "description": "OpenTelemetry collector for traces and metrics ingestion",
      "baseUrl": "http://otel-collector:4317",
      "endpoints": [
        {
          "path": "/v1/traces",
          "method": "POST",
          "description": "OTLP trace ingestion endpoint"
        },
        {
          "path": "/v1/metrics", 
          "method": "POST",
          "description": "OTLP metrics ingestion endpoint"
        }
      ]
    },
    {
      "name": "prometheus-api",
      "description": "Prometheus metrics and exemplars query API",
      "baseUrl": "http://prometheus:9090",
      "endpoints": [
        {
          "path": "/api/v1/query",
          "method": "GET", 
          "description": "Query metrics with exemplars"
        },
        {
          "path": "/api/v1/query_range",
          "method": "GET",
          "description": "Range query for time series data"
        }
      ]
    }
  ],
  "localServers": {
    "otel-tracer": {
      "command": ["./scripts/otel-wrapper.sh"],
      "args": ["--span-name", "test/step", "--attributes", "repo=test-repo,pr=123"],
      "env": {
        "OTEL_EXPORTER_OTLP_ENDPOINT": "http://otel-collector:4317",
        "OTEL_SERVICE_NAME": "agent-steps"
      }
    },
    "metrics-validator": {
      "command": ["./scripts/validate-metrics.sh"],
      "args": ["--check-duration", "--check-counters"],
      "env": {
        "PROMETHEUS_URL": "http://prometheus:9090"
      }
    }
  }
}