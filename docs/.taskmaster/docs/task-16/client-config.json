{
  "remoteTools": [
    {
      "name": "filesystem",
      "description": "File system operations for template management",
      "capabilities": ["read", "write", "list"]
    },
    {
      "name": "rust-analyzer", 
      "description": "Rust language server for code analysis",
      "capabilities": ["syntax-check", "type-check", "completion"]
    },
    {
      "name": "git",
      "description": "Git operations for repository management", 
      "capabilities": ["status", "diff", "commit", "branch"]
    },
    {
      "name": "cargo",
      "description": "Rust build tool and package manager",
      "capabilities": ["build", "test", "check", "bench"]
    }
  ],
  "localServers": {
    "controller-dev": {
      "command": "cargo",
      "args": ["watch", "-x", "check"],
      "cwd": "controller/",
      "env": {
        "RUST_LOG": "debug"
      }
    },
    "template-validator": {
      "command": "bash",
      "args": ["-c", "find templates/ -name '*.hbs' -exec bash -n {} \\;"],
      "cwd": "./",
      "env": {}
    }
  }
}