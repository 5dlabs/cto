{
  "remoteTools": [
    "memory_create_entities",
    "memory_add_observations",
    "brave_web_search"
  ],
  "localServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspace"],
      "tools": ["read_file", "write_file", "list_directory", "search_files", "directory_tree"],
      "workingDirectory": "project_root"
    },
    "kubernetes": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-kubernetes", "/workspace"],
      "tools": ["kubectl_apply", "kubectl_get", "kubectl_describe", "kubectl_logs", "kubectl_patch", "kubectl_delete"],
      "workingDirectory": "project_root"
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git", "/workspace"],
      "tools": ["git_status", "git_diff", "git_log", "git_show"],
      "workingDirectory": "project_root"
    }
  }
}