{
  "remoteTools": [
    {
      "name": "worktree-manager-api",
      "description": "Git worktree management for parallel workspace isolation",
      "baseUrl": "https://kubernetes.default.svc",
      "endpoints": [
        {
          "path": "/api/v1/configmaps/workflow-semaphores",
          "method": "GET",
          "description": "Get semaphore configuration for concurrency control"
        }
      ]
    }
  ],
  "localServers": {
    "worktree-tester": {
      "command": ["./scripts/test-worktrees.sh"],
      "args": ["--parallel", "10", "--repo", "test-org/test-repo"],
      "env": {
        "TEST_MODE": "performance"
      }
    },
    "cleanup-validator": {
      "command": ["./scripts/validate-cleanup.sh"],
      "args": ["--check-storage", "--check-processes"],
      "env": {
        "CLEANUP_TIMEOUT": "300"
      }
    }
  }
}