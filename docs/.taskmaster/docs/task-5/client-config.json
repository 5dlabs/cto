{
  "remoteTools": [
    {
      "name": "implementation-dag-api",
      "description": "End-to-end implementation workflow API",
      "baseUrl": "https://argo-workflows.workflows.svc.cluster.local:2746",
      "endpoints": [
        {
          "path": "/api/v1/workflows/{namespace}",
          "method": "POST",
          "description": "Submit implementation DAG workflow",
          "parameters": {
            "workflowTemplateRef": "implementation-dag",
            "owner": "Repository owner",
            "repo": "Repository name",
            "pr": "Pull request number",
            "commit": "Optional commit SHA",
            "domain": "Preview domain (default: preview.example.com)",
            "chartPath": "Helm chart path (default: charts/app)",
            "valuesFile": "Values file (default: values-preview.yaml)",
            "imageTag": "Container image tag (default: pr-{pr})"
          }
        }
      ]
    },
    {
      "name": "preview-environment-api",
      "description": "Preview environment management and monitoring",
      "baseUrl": "https://kubernetes.default.svc",
      "endpoints": [
        {
          "path": "/api/v1/namespaces",
          "method": "GET",
          "description": "List preview namespaces",
          "parameters": {
            "labelSelector": "preview=true"
          }
        },
        {
          "path": "/apis/networking.k8s.io/v1/namespaces/{namespace}/ingresses",
          "method": "GET",
          "description": "Get preview environment URLs"
        }
      ]
    }
  ],
  "localServers": {
    "dag-tester": {
      "command": ["./scripts/test-implementation-dag.sh"],
      "args": ["--pr", "123", "--repo", "test-app"],
      "env": {
        "KUBECONFIG": "${HOME}/.kube/config",
        "HELM_VERSION": "3.14"
      }
    },
    "acceptance-simulator": {
      "command": ["./scripts/simulate-acceptance-tests.sh"],
      "args": ["--host", "pr-123.preview.example.com", "--scenarios", "basic,performance"],
      "env": {
        "CURL_TIMEOUT": "30",
        "MIN_SUCCESS_PCT": "0.95"
      }
    }
  }
}