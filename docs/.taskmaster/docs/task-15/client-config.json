{
  "remoteTools": [
    "brave-search_brave_web_search",
    "memory_create_entities",
    "memory_query_entities"
  ],
  "localServers": {
    "mcp-memory": {
      "command": "mcp-memory-server",
      "args": ["--storage-path", "/workspace/memory"]
    },
    "mcp-prometheus": {
      "command": "mcp-prometheus-client",
      "args": ["--server-url", "http://victoria-metrics.monitoring.svc.cluster.local:8428"],
      "env": {
        "PROMETHEUS_URL": "http://victoria-metrics.monitoring.svc.cluster.local:8428",
        "QUERY_TIMEOUT": "30s"
      }
    },
    "mcp-grafana": {
      "command": "mcp-grafana-client",
      "args": ["--server-url", "http://grafana.monitoring.svc.cluster.local:3000"],
      "env": {
        "GRAFANA_URL": "http://grafana.monitoring.svc.cluster.local:3000",
        "GRAFANA_API_TOKEN": "${GRAFANA_API_TOKEN}"
      }
    }
  }
}