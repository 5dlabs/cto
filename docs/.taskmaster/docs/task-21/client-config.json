{
  "remoteTools": [
    "kubernetes_listResources",
    "kubernetes_describeResource", 
    "kubernetes_createResource",
    "kubernetes_deleteResource",
    "kubernetes_listPods",
    "kubernetes_getPodLogs",
    "brave-search_brave_web_search",
    "memory_create_entities",
    "memory_query_entities"
  ],
  "localServers": {
    "github-testing": {
      "command": "node",
      "args": ["./tools/github-test-server.js"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_ORG": "5dlabs-test"
      }
    },
    "chaos-mesh": {
      "command": "python3",
      "args": ["./tools/chaos-testing.py"],
      "env": {
        "KUBECONFIG": "${KUBECONFIG}"
      }
    },
    "performance-monitor": {
      "command": "python3", 
      "args": ["./tools/performance-monitor.py"],
      "env": {
        "PROMETHEUS_URL": "${PROMETHEUS_URL}"
      }
    }
  }
}