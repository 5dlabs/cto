{
  "remoteTools": [
    "kubernetes_listResources",
    "kubernetes_describeResource", 
    "kubernetes_createResource",
    "kubernetes_updateResource",
    "kubernetes_deleteResource",
    "kubernetes_getResource",
    "brave-search_brave_web_search",
    "memory_create_entities",
    "memory_query_entities"
  ],
  "localServers": {
    "mcp-kubernetes": {
      "command": "npx",
      "args": ["@kubernetes/mcp-server"],
      "env": {
        "KUBECONFIG": "/etc/kube/config",
        "KUBE_NAMESPACE": "agent-platform"
      }
    },
    "mcp-memory": {
      "command": "mcp-memory-server",
      "args": ["--storage-path", "/workspace/memory"]
    }
  }
}