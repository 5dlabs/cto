{
  "remoteTools": [
    {
      "name": "github-reviews-api",
      "description": "GitHub Reviews API for PR approval workflow",
      "baseUrl": "https://api.github.com",
      "endpoints": [
        {
          "path": "/repos/{owner}/{repo}/pulls/{pull_number}/reviews",
          "method": "POST", 
          "description": "Submit PR review with APPROVE event"
        },
        {
          "path": "/repos/{owner}/{repo}/issues/{issue_number}/comments",
          "method": "POST",
          "description": "Post comment with QA evidence links"
        }
      ]
    },
    {
      "name": "kubernetes-api",
      "description": "Kubernetes API for resource inspection and evidence collection",
      "baseUrl": "https://kubernetes.default.svc",
      "endpoints": [
        {
          "path": "/api/v1/namespaces/{namespace}/pods",
          "method": "GET",
          "description": "List pods for log collection"
        },
        {
          "path": "/api/v1/namespaces/{namespace}/events",
          "method": "GET", 
          "description": "Get namespace events for troubleshooting"
        }
      ]
    }
  ],
  "localServers": {
    "qa-evidence-collector": {
      "command": ["./scripts/collect-qa-evidence.sh"],
      "args": ["--namespace", "qa-testing", "--output-dir", "/artifacts/qa/proof"],
      "env": {
        "K8S_NAMESPACE": "qa-testing",
        "ARTIFACTS_DIR": "/artifacts/qa/proof"
      }
    },
    "proof-validator": {
      "command": ["./scripts/validate-qa-proof.sh"], 
      "args": ["--summary-path", "/artifacts/qa/proof/summary.json"],
      "env": {
        "SUMMARY_SCHEMA_VERSION": "1.0"
      }
    }
  }
}